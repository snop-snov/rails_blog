- model_class = Post
.page-header
  %h1=t '.show_post'

%p
  %strong= t('.title') + ':'
  %br
  = @post.title
%p
  %strong= t('.text') + ':'
  %br
  = @post.text

%h2= t('.comments')
-#= render @post.comments
= render partial: "web/posts/comments/comment", collection: @post.comments

%h3= t('.add_comment') + ':'
= render "web/posts/comments/form"

.form-actions
  = link_to t('.back'), posts_path, :class => 'btn'
  = link_to t('.edit'), edit_post_path(@post), :class => 'btn'
  -if @post.deleted?
    = link_to t('.destroy'), posts_path, class: 'btn btn-inverse'
  -else
    = link_to t('.destroy'), post_path(@post), :method => :delete, data: { :confirm => t('.delete_confirm') }, class: 'btn btn-danger'
