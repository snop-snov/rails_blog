-unless @comment.is_root?
  %strong= t('.parent')
  = @comment.parent_id

= simple_form_for @comment, url: post_comments_path(@post), html: { class: 'form-vertical' } do |f|
  = f.input :parent_id, as: :hidden
  = f.input :body, wrapper: :no_label
  .form-actions
    = f.button :submit, class: 'btn-primary'
