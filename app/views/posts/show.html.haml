- model_class = Post
.page-header
  %h1=t '.show_post'

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @post.title
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @post.text

%h2 Comments
= render @post.comments

%h2 Add a comment:
= render "comments/form"

.form-actions
  = link_to t('.back'), posts_path, :class => 'btn'
  = link_to t('.edit'), edit_post_path(@post), :class => 'btn'
  = link_to t('.destroy'), post_path(@post), :method => "delete", :class => 'btn btn-danger'