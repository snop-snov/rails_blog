- model_class = Post
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:text)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:activity_state)
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= truncate(post.text, :length => 60, :separator => ' ')
        %td=l post.created_at, :format => :short
        %td
          = link_to t('.show', :default => t("helpers.links.show")), post_path(post), :class => 'btn btn-mini'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(post), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(post), :method => :delete, :class => 'btn btn-mini btn-danger'
        %td= post.state
        %td= post.activity_state

= link_to t('.new', :default => t("helpers.links.new")), new_post_path, :class => 'btn btn-primary'