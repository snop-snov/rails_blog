= simple_form_for @post, :html => { :class => 'form-vertical' } do |f|
  = f.input :title, :wrapper => :prepend, :label => false do
    =content_tag :span, "Title", :class => "add-on"
    =f.input_field :title
  = f.input :text, :input_html => { :class => "span6" }
  -unless @post.new_record?
    = f.label :state
    = f.collection_select :state_event, @post.state_transitions, :event, :human_to_name, :include_blank => @post.human_state_name

  = f.collection_select :activity_state_event, @post.activity_state_transitions, :event, :human_to_name, :include_blank => @post.human_activity_state_name

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), posts_path, :class => 'btn'